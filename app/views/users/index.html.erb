<h1>The User_Derpers List of Magical Users</h1>

</br>
<h3>Users on On the Beach</h3> 
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Domain</th>
    <th colspan="2"></th>
  </tr>
  
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.surname %></td>
      <td><%= user.email %></td>
      <td><%= render user.flag %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    </tr>
  <% end %>
</table>

